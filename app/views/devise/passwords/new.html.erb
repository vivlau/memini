<div class="password-background">
  <div class="container">
    <div class="password-container">
      <h2>Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">email</i>
            <input placeholder="johndoe@gmail.com" id="email" type="text" class="validate">
            <label for="email">Email</label>
          </div>
        </div>

        <div class="input-field col s12">
          <button class="btn waves-effect waves-light" id="submitButton" type="submit" name="action">Send me reset password instructions</button>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
